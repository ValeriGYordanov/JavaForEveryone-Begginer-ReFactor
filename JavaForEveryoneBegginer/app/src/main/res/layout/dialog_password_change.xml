<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorTransparentPrimaryDark"
    android:id="@+id/password_dialog"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/small_margin"
        android:text="Смени Парола"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="@dimen/mid_sp"
        android:background="@color/colorTransparentPrimaryDark"
        android:padding="@dimen/small_sp"
        />


    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/small_margin"
        android:textAlignment="center"
        app:hintTextAppearance="@style/TextHint">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/old_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Въведи Стара Парола"
            android:inputType="textPassword"
            android:textAlignment="center"
            android:textSize="@dimen/mid_sp" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="81dp"
        android:layout_margin="@dimen/small_margin"
        android:textAlignment="center"
        app:hintTextAppearance="@style/TextHint">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/new_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Въведи Нова Парола"
            android:inputType="textPassword"
            android:textAlignment="center"
            android:textSize="@dimen/mid_sp" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="81dp"
        android:layout_margin="@dimen/small_margin"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:textAlignment="center"
        app:hintTextAppearance="@style/TextHint"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.545">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/new_pass_again"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Въведи Нова Парола Отново"
            android:inputType="textPassword"
            android:textAlignment="center"
            android:textSize="@dimen/mid_sp" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/change_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="@color/colorPrimary"
        android:text="Смени"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        />

</LinearLayout>